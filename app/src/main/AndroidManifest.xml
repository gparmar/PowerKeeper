<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.tranquilsoft.powerkeeper">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="in.tranquilsoft.in.gparmar.powerkeeper.PowerKeeperApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="in.tranquilsoft.in.gparmar.powerkeeper.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="in.tranquilsoft.in.gparmar.powerkeeper.PowerConnectionReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <service
            android:name="in.tranquilsoft.in.gparmar.powerkeeper.service.CreateReportService"
            android:label="Create report service"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <!--<activity-->
            <!--android:name=".ScheduleJobActivity"-->
            <!--android:parentActivityName=".MainActivity" />-->
        <!--<activity-->
            <!--android:name=".SettingsActivity"-->
            <!--android:parentActivityName=".MainActivity" />-->
        <activity
            android:name="in.tranquilsoft.in.gparmar.powerkeeper.data.AndroidDatabaseManager"
            android:parentActivityName="in.tranquilsoft.in.gparmar.powerkeeper.HomeActivity" />

    </application>

</manifest>